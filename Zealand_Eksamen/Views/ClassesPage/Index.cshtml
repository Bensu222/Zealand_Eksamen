@model IEnumerable<Zealand_Eksamen.Models.Class>
@{
    ViewData["Title"] = "Hold";
}
<h2>Hold</h2>
<form class="row g-2 mb-3" method="get" asp-action="Index">
    <div class="col-sm-8 col-md-6 col-lg-4">
        <input type="text" class="form-control" name="q" value="@((string)ViewBag.Query ?? "")" placeholder="Søg efter holdkode (f.eks. DAT-RO-F-V25B)" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Søg</button>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Ryd</a>
    </div>
</form>
<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Opret Hold</a>
    <a class="btn btn-outline-secondary" href="@Url.Action("Index", "ExamsPage")">Gå til Eksamener</a>
    <a class="btn btn-outline-secondary" href="@Url.Action("Index", "EmployeesPage")">Gå til Medarbejdere</a>
</p>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Holdkode</th>
        <th>Semester</th>
        <th>Program</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.ClassCode</td>
            <td>@c.Semester</td>
            <td>@c.Programme</td>
            <td>
                <a class="btn btn-sm btn-secondary" href="@Url.Action("Edit", new { id = c.ClassID })">Rediger</a>
                <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Delete", new { id = c.ClassID })">Slet</a>
                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Class", "Schedule", new { id = c.ClassID })">Skema</a>
            </td>
        </tr>
    }
    </tbody>
</table>