@model IEnumerable<Zealand_Eksamen.Models.Class>
@{
    ViewData["Title"] = "Alle Holds Skemaer";
}
<h2>Alle Hold - Eksamensskemaer</h2>

@foreach (var cls in Model)
{
    <div class="card mb-4">
        <div class="card-header">
            <strong>@cls.ClassCode</strong>
            <span class="text-muted">@cls.Semester - @cls.Programme</span>
        </div>
        <div class="card-body p-0">
            <table class="table mb-0">
                <thead>
                <tr>
                    <th>Eksamen</th>
                    <th>Type</th>
                    <th>Start</th>
                    <th>Slut</th>
                </tr>
                </thead>
                <tbody>
                @if (cls.Exams.Any())
                {
                    foreach (var e in cls.Exams)
                    {
                        <tr>
                            <td>@e.ExamName</td>
                            <td>@e.ExamType?.TypeName</td>
                            <td>@e.OrdinaryStartDate?.ToShortDateString()</td>
                            <td>@e.OrdinaryEndDate?.ToShortDateString()</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-muted">Ingen eksamener planlagt.</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}