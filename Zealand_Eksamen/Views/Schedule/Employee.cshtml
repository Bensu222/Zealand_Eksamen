@model IEnumerable<Zealand_Eksamen.Models.ExamAssignment>
@{
    ViewData["Title"] = "Medarbejderskema";
    var overlaps = ViewBag.Overlaps as List<(DateOnly day, int count)> ?? new();
}
<h2>Medarbejderskema - @((ViewBag.EmployeeName as string) ?? ("ID " + ViewBag.EmployeeId))</h2>

@if (overlaps.Any())
{
    <div class="alert alert-warning">
        Overlap registreret p√•:
        <ul>
            @foreach (var o in overlaps)
            {
                <li>@o.day: @o.count eksamener</li>
            }
        </ul>
    </div>
}

<table class="table table-striped">
    <thead>
    <tr>
        <th>Eksamen</th>
        <th>Hold</th>
        <th>Start</th>
        <th>Slut</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var a in Model)
    {
        <tr>
            <td>@a.Exam.ExamName</td>
            <td>@a.Exam.Class.ClassCode</td>
            <td>@a.Exam.OrdinaryStartDate?.ToShortDateString()</td>
            <td>@a.Exam.OrdinaryEndDate?.ToShortDateString()</td>
        </tr>
    }
    </tbody>
</table>